Options +Indexes
RewriteEngine On

RewriteRule  ^g/([^/\.]+)/?$  /images/gif/$1.gif  [L]
RewriteRule  ^j/([^/\.]+)/?$  /images/jpg/$1.jpg  [L]
RewriteRule  ^([^/\.]+)/?$    /images/png/$1.png  [L]
